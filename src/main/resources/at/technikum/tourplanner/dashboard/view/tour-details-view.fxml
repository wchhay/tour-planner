<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.technikum.tourplanner.dashboard.view.TourDetailsController">
    <HBox>
        <VBox.margin>
            <Insets top="8.0"/>
        </VBox.margin>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Title:">
            <font>
                <Font size="16.0"/>
            </font>
            <HBox.margin>
                <Insets right="4.0"/>
            </HBox.margin>
        </Text>
        <TextField fx:id="title" editable="false" HBox.hgrow="ALWAYS"/>
        <Button fx:id="editButton" onAction="#onEdit" text="Edit"/>
    </HBox>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Route:">
        <VBox.margin>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
        </VBox.margin>
    </Text>
    <TextArea fx:id="route" editable="false" VBox.vgrow="ALWAYS"/>
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Description:">
        <VBox.margin>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0"/>
        </VBox.margin>
    </Text>
    <TextArea fx:id="description" editable="false" VBox.vgrow="ALWAYS"/>
    <Button fx:id="saveButton" onAction="#onSave" text="Save" visible="false"/>
</VBox>